{% extends 'base.html.twig' %}

{% block body %}
    <table>
        <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Date</th>
            <th>Lieu</th>
            <th>Note</th>
            
        </tr>
        </thead>
        <tbody>
        {% for meeting in meetings %}
        <tr>
            <td><a href="{{ path('meeting_view', {id: meeting.id}) }}">{{ meeting.title }}</a></td>
            <td>{{ meeting.description }}</td>
            <td>{{ meeting.date|date("d/m/Y") }}</td>
            <td>{{ meeting.location}}</td>
            <td>{{ meeting.note}}/5</td>
            <td><a href="{{ path('vote_add', {id: meeting.id}) }}">Noter</a></td>
        {% endfor %}
        </tbody>
    </table>

<div class="container">
   <div class="pagination">
      {{ knp_pagination_render(pagination) }}
   </div>
</div>
   
{% endblock %}
