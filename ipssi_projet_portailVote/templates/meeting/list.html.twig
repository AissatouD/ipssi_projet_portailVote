{% extends 'base.html.twig' %}

{% block body %}
    <table>
        <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Date</th>
            <th>Lieu</th>
            
        </tr>
        </thead>
        <tbody>
        {% for meeting in meetings %}
        <tr>
            <td>{{ meeting.title }}</td>
            <td>{{ meeting.description }}</td>
            <td>{{ meeting.date|date("m/d/Y") }}</td>
            <td>{{ meeting.location}}</td>
            <td><a href="{{ path('meetingapp_meeting_edit', {id: meeting.id}) }}">Edit</a></td>
            <td><a href="{{ path('meetingapp_meeting_delete', {id: meeting.id}) }}">Delete</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
    {{ knp_pagination_render(meetings) }}
    </div>
{% endblock %}
